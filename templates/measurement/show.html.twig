{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.date ? measurement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Celcius</th>
                <td>{{ measurement.celcius }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ measurement.pressure }}</td>
            </tr>
            <tr>
                <th>Windspeed</th>
                <td>{{ measurement.windspeed }}</td>
            </tr>
            <tr>
                <th>Rain</th>
                <td>{{ measurement.rain }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ measurement.humidity }}</td>
            </tr>
            <tr>
                <th>Is_sunny</th>
                <td>{{ measurement.isSunny ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
